<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.neonclock.nightclock.smartclock.digitalclock.activity.SmartMainActivity">
    <RelativeLayout
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back_btn"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@color/transparent"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_toEndOf="@id/back_btn"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Smart Clock"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textSize="@dimen/_20sdp"
            android:id="@+id/title"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_title"
        android:layout_above="@+id/next_btn"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/clock_preview_img"
            android:layout_weight=".50"
            android:adjustViewBounds="true"
            android:layout_margin="@dimen/_16sdp"
            android:src="@drawable/ic_smart_clock_thumb_1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".50"
            android:weightSum="2"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/clock_1"
                    app:cardBackgroundColor="@color/bg_color"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_20sdp"
                    android:elevation="@dimen/_20sdp"
                    android:layout_margin="@dimen/_6sdp"
                    app:strokeColor="#2680EB"
                    app:strokeWidth="@dimen/_1sdp"
                    android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:layout_margin="@dimen/_6sdp"
                            android:src="@drawable/ic_smart_clock_thumb_1"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/clock_2"
                    app:cardBackgroundColor="@color/bg_color"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_20sdp"
                    android:elevation="@dimen/_20sdp"
                    android:layout_margin="@dimen/_6sdp"
                    app:strokeColor="#2680EB"
                    app:strokeWidth="@dimen/_1sdp"
                    android:layout_weight="1">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:layout_margin="@dimen/_6sdp"
                        android:src="@drawable/ic_smart_clock_thumb_2"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/clock_3"
                    app:cardBackgroundColor="@color/bg_color"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_20sdp"
                    android:elevation="@dimen/_20sdp"
                    android:layout_margin="@dimen/_6sdp"
                    app:strokeColor="#2680EB"
                    app:strokeWidth="@dimen/_1sdp"
                    android:layout_weight="1">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:layout_margin="@dimen/_6sdp"
                        android:src="@drawable/ic_smart_clock_thumb_3"/>
                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/clock_4"
                    app:cardBackgroundColor="@color/bg_color"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_20sdp"
                    android:elevation="@dimen/_20sdp"
                    android:layout_margin="@dimen/_6sdp"
                    app:strokeColor="#2680EB"
                    app:strokeWidth="@dimen/_1sdp"
                    android:layout_weight="1">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:layout_margin="@dimen/_6sdp"
                        android:src="@drawable/ic_smart_clock_thumb_4"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/clock_5"
                    app:cardBackgroundColor="@color/bg_color"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_20sdp"
                    android:elevation="@dimen/_20sdp"
                    android:layout_margin="@dimen/_6sdp"
                    app:strokeColor="#2680EB"
                    app:strokeWidth="@dimen/_1sdp"
                    android:layout_weight="1">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:layout_margin="@dimen/_6sdp"
                        android:src="@drawable/ic_smart_clock_thumb_5"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/clock_6"
                    app:cardBackgroundColor="@color/bg_color"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_20sdp"
                    android:elevation="@dimen/_20sdp"
                    android:layout_margin="@dimen/_6sdp"
                    app:strokeColor="#2680EB"
                    app:strokeWidth="@dimen/_1sdp"
                    android:layout_weight="1">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:layout_margin="@dimen/_6sdp"
                        android:src="@drawable/ic_smart_clock_thumb_6"/>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/next_btn"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_50sdp"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="@dimen/_16sdp"
        app:cornerRadius="@dimen/_10sdp"
        android:elevation="@dimen/_20sdp"
        android:text="Next"/>

</RelativeLayout>